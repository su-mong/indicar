<resources>

    <style name="UnityThemeSelector" parent="android:Theme.Light.NoTitleBar.Fullscreen"></style>

    <style name="UnityThemeSelector.Translucent" parent="@style/UnityThemeSelector">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">60dp</item>
    </style>

    <style name="noActionTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Transparent" parent="noActionTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/trnasparent</item>
    </style>
    <!-- Splash Activity 테마 -->
    <style name="LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <!--New Splash Activity 테마 -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <!-- Photo Picker 테마 -->
    <style name="photoPickerTheme" parent="Matisse.Zhihu">
        <item name="colorPrimary">@color/colorFontLight</item>
        <item name="android:textSize">13dp</item>
        <item name="colorPrimaryDark">@color/colorFontLight</item>
        <item name="album.title.color">@color/colorFont</item>
        <item name="album.count.color">@color/colorFontLight</item>
        <item name="bottomToolbar.apply.color">@color/colorFont</item>
        <item name="bottomToolbar.bg">@color/colorPrimary</item>
        <item name="bottomToolbar.preview.color">@color/colorFont</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- ImageButton 공통 스타일 테마 -->
    <style name="imageButtonCustomStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- ImageButton 공통 스타일 테마 -->
    <style name="commentButtonCustomStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogStyle" parent="@android:style/Holo.Light.ButtonBar.AlertDialog">
        <item name="android:keyTextSize">12sp</item>
        <item name="android:labelTextSize">12sp</item>
        <item name="android:textSize">12sp</item>

    </style>

    <!-- 게시글 EditTextView 공통 스타일 테마 -->
    <style name="textViewBoardContentStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- 게시글 EditTextView 공통 스타일 테마 -->
    <style name="textViewCommentContentStyle" parent="@android:style/Widget.TextView">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 게시글 정보(유저이름, 좋아요, 댓글 등) TextView 스타일 테마 -->
    <style name="textViewBoardInfoStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textViewBoardWritePageInfo" parent="@android:style/Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- 게시글 정보(유저이름, 좋아요, 댓글 등) TextView 스타일 테마 -->
    <style name="textViewCommentInfoStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">13sp</item>
    </style>

    <!-- mainImage 공통 스타일 테마 -->
    <style name="mainImageCustomStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- mainImage 공통 스타일 테마 -->
    <style name="popularImageCustomStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
