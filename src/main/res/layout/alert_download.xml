<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_download"
    android:background="@drawable/alert_tuning">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guidelineAlertD1"
        app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/guidelineAlertD2"
        app:layout_constraintGuide_percent="0.75"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btnAlertDownload"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="@+id/guidelineAlertD2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guidelineAlertD1" />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btnAlertDownCancel"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="@+id/guidelineAlertD2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineAlertD1"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>